#!/usr/bin/perl -w

use Qt;
use QColor;
use QFont;
use Hello;

$s = @ARGV ? "@ARGV" : 'Hello, World';
$h = new Hello($s);
$h->setCaption('Qt says hello');
$qApp->connect($h, 'clicked()', 'quit()');
$h->setFont(new QFont('Times', 32, $Weight{Bold}));
$h->setBackgroundColor($white);
$qApp->setMainWidget($h);
$h->show();
exit $qApp->exec();
