#!/usr/bin/perl -w
use Qt;
use QFont;
use QPushButton;

$w = new QWidget;
$w->resize(200, 120);

$quit = new QPushButton('Quit', $w);
$quit->move(62, 40);
$quit->resize(75, 30);
$quit->setFont(new QFont('Times', 18, $Weight{Bold}));

$qApp->connect($quit, 'clicked()', 'quit()');

$qApp->setMainWidget($w);
$w->show();
exit $qApp->exec();
